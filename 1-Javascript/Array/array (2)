// combining arrays
let newArray = [].concat(array1, array2);
// or
let newArray = [...array1, ...array2];

// removing duplicates
let newSet = new Set(newArray);
// or
let newSet = new Set([...array1, ...array2]);

// transforming set to array
let newArray = [...newSet];
// note: if array conatins objects, 
//       only one reference will stay in set
